BINDIR={BINDIR}
MANDIR={MANDIR}

all:	
	cd src && $(MAKE)

install:	all
	mkdir -p "$(BINDIR)" "$(MANDIR)/man1/"
	install src/cksfv "$(BINDIR)"
	install -m 644 cksfv.1 "$(MANDIR)/man1/"

clean:	
	rm -f *.o *~ *.core core
	rm -f rpm/*.o rpm/*~ rpm/*.core rpm/core
	cd src && $(MAKE) clean

check:	all
	cd test && ./test.sh
